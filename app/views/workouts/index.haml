= render partial: 'workouts/new_modal'

.page-header
  .pull-right
    %button{type: 'button', class: 'btn btn-md btn-primary', data: {toggle: 'modal', target: '#newWorkoutModal'}}
      %span.fa.fa-plus
      New Workout
  %h1 
    %span.fa.fa-heartbeat
    Workouts

.panel.panel-default
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Date
        %th Duration
    %tbody
      - @workouts.each do |workout|
        %tr
          %td
            = link_to workout.name, workout
          %td= workout.start_at.strftime('%D')
          %td= workout.duration
  .panel-footer.text-center
    = will_paginate @workouts
