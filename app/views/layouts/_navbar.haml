%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#navbar-collapse'}, aria: {expanded: false}}
        %span.sr-only Toggle Navigation
        %span.icon-bar 
        %span.icon-bar 
        %span.icon-bar 
      = link_to 'Path of the Strong', dashboard_path, class: 'navbar-brand'
    - if !logged_in?
      %ul.navbar-form.navbar-right
        = link_to login_path, class: 'btn btn-default' do
          %span.fa.fa-sign-in
          Log In
    - if logged_in?
      #navbar-collapse.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            = link_to dashboard_path do
              %span.fa.fa-dashboard
              Dashboard
          %li
            = link_to workouts_path do
              %span.fa.fa-heartbeat
              Workouts
          %li
            = link_to '' do
              %span.fa.fa-list-alt
              Routines
        %ul.navbar-form.navbar-right
          = link_to logout_path, method: :delete, class: 'btn btn-default' do
            %span.fa.fa-sign-out
            Log Out
        %ul.nav.navbar-nav.navbar-right
          %li
            %p.navbar-text
              %span.fa.fa-user
              Welcome,
              = link_to current_user.first_name, profile_path
