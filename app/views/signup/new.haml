.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.fa.fa-user-plus
            Sign Up
        .panel-body
          = form_for @user, url: signup_path do |f|
            .form-group{class: form_group_error_class(@user, :first_name)}
              = f.label :first_name, 'First Name'
              = f.text_field :first_name, class: 'form-control', placeholder: 'Enter first name'
              = help_block_error_message(@user, :first_name)
            .form-group{class: form_group_error_class(@user, :last_name)}
              = f.label :last_name, 'Last Name'
              = f.text_field :last_name, class: 'form-control', placeholder: 'Enter last name'
              = help_block_error_message(@user, :last_name)
            .form-group{class: form_group_error_class(@user, :email)}
              = f.label :email, 'Email'
              .input-group
                %span.input-group-addon @
                = f.text_field :email, class: 'form-control', placeholder: 'Enter email'
              = help_block_error_message(@user, :email)
            .form-group{class: form_group_error_class(@user, :password)}
              = f.label :password, 'Password'
              .input-group
                %span.input-group-addon
                  %span.fa.fa-lock
                = f.password_field :password, class: 'form-control', placeholder: 'Enter password'
              = help_block_error_message(@user, :password)
            .form-group{class: form_group_error_class(@user, :password_confirmation)}
              = f.label :password_confirmation, 'Password Confirmation'
              .input-group
                %span.input-group-addon
                  %span.fa.fa-lock
                = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter password confirmation'
              = help_block_error_message(@user, :password_confirmation)
            = f.submit 'Sign Up', class: 'btn btn-block btn-primary'
